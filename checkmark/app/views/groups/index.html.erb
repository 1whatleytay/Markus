
<% @title = "Select which assignment to view groups" -%>

<% if @current_user.admin? -%>
  <%= render :partial => "layouts/assignments", 
    :locals => { :controller => 'groups', :action => 'manage_new' } -%>
  
<% elsif @current_user.student? -%>
  <%= render :partial => "layouts/assignments", 
    :locals => { :controller => 'groups', :action => 'creategroup' } -%>
<% end -%>