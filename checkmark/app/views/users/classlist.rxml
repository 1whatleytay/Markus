xml.instruct! :xml, :version => "1.0", :encoding => "UTF-8"
xml.declare! :DOCTYPE, :classlist, :SYSTEM, "classlist_config.dtd"

xml.classlist do
  for student in @users
    xml.entry do
      xml.cdflogin(student.user_name)
      xml.number(student.user_number)
      xml.name(student.first_name + " " + student.last_name)
    end
  end
end