<h1>Edit Student</h1>

<div class="section">

  <% form_for :student, :url => {:controller => 'students', :action => 'edit'} do |f| -%>
    <%= f.error_messages -%>
  
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
  
      <%= f.label :user_number %>
      <%= f.text_field :user_number %>
  
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
  
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
  
      <label for="update">Update</label>
      <%= f.submit 'Update', :name => 'update' %>
      
      <%= hidden_field :student, :id %>
  
  <% end %>

</div>

<%= link_to 'Cancel', :controller => 'students' %>
