#!/usr/bin/env bash

# Go to the Markus root.
markus_path=$( cd "$(dirname "${BASH_SOURCE[0]}")/.." ; pwd -P )
cd "$markus_path"

# Check if redis-server is running
if ! redis-cli ping ; then
  echo "Starting redis-server"
  redis-server &
fi

QUEUE=* TERM_CHILD=1 BACKGROUND=yes bundle exec rake environment resque:work &

if [ -d ~/markus-autotesting ] ; then
  ~/markus-autotesting/server/start_resque.sh tester
fi

bundle exec rails s
