
<div class="wrapLeft">
  <% if flash[:success] %>
    <div class="success">
      <%= flash[:success] %>
    </div>
  <% end%>
  <% if flash[:error] %>
    <div class="error">
    	<% if flash[:error_object] %>
      		<%= flash[:error].to_s + ' ' + reason_for_error(flash[:error_object]) %>
  		<% else %>
  			<%= flash[:error] %>
		<% end %>
    </div>
  <% end%>

</div>

<%= form_for @section,
	     :as => :section do |f| %>
<fieldset>
  <legend><%= I18n.t('section.legend') %></legend>
  <%= f.label :name, t("section.name") %>
  <%= f.text_field :name%>
  <br />
  <% if controller.action_name == "create_section"%>
    <%= f.submit I18n.t(:submit) %>
  <% else %>
    <%= f.submit I18n.t(:save) %>
  <% end %>

</fieldset>

<% end %>

