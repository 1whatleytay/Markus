<%= form_for [@assignment, exam_template],
             url: generate_assignment_exam_template_path(id: exam_template.id) do |f| %>

    <fieldset>
      <legend><%= t('exam_templates.generate.title') %></legend>
      <%= f.label t('exam_templates.generate.copies_label') %>
      <input type="number" name="numCopies" class="toolbarField pageNumber" value="1" size="4" min="1" tabindex="15">
      <br>
      <%= f.label t('exam_templates.generate.index_label') %>
      <input type="number" name="examTemplateIndex" class="toolbarField pageNumber" value="1" size="4" min="1" tabindex="15">
      <p><%= submit_tag t(:submit) %></p>
    </fieldset>
<% end %>
