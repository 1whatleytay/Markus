<%= content_for :modal_id, 'create_new_division' %>
<%= content_for :modal_title, 'Add new template division' %>
<%= content_for :modal_content do %>
  <%= form_for :create_division,
               url: assignment_exam_templates_path(@assignment),
               html: { multipart: true, size: 1 } do |f| %>
    <div>
      <p class="alignleft">Label <span class='required_field'>*</span></p>
      <p class="clear-alignment">
        <%= f.text_field :label, required: true %>
      </p>
    </div>
    <div>
      <p class="alignleft">
        Start: <%= f.number_field :start, min: 1 %>
      </p>
      <p class="alignleft">
        End: <%= f.number_field :end, min: 1 %>
      </p>
    </div>
    <section class='dialog-actions'>
      <%= f.submit t(:save_changes),
                   name: 'submit',
                   data: { disable_with: t('working') },
                   class: 'button' %>
      <input type='reset' value='<%= t(:cancel) %>' onclick='modal_template_create_new.close();'/>
    </section>
  <% end %>
<% end %>
