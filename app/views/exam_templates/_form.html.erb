<%= form_for @exam_templates,
             as: :exam_template,
             url: assignment_exam_templates_path,
             html: {multipart: true} do |f| %>
    <div class='template-pane'>
      <h4>
        <%= link_to 'Download Exam Template', {:action=>'download', :controller=>'exam_templates', :id=>exam_template.id} %>
      </h4>
      <br>
      <h4>Number of pages: <%= exam_template.num_pages %></h4>
      <h4>Name of file: <%= exam_template.filename %></h4>
    </div>

<% end %>

<fieldset>
  <legend><%= t("automated_tests.assignment_test_script_files") %></legend>
  <p><%= raw t("assignment.required_fields") %> <span class='required_field'>*</span></p>

  <div id="test_scripts">
    <%= render partial: 'exam_template_upload', locals: {exam_template: exam_template} %>
  </div>
</fieldset>
