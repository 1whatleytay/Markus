<%= content_for :modal_id, 'create_new_template' %>
<%= content_for :modal_title, 'Add New Exam Template' %>
<%= content_for :modal_content do %>
    <%= 'Filename:' %>
    <%= form_for :create_template,
                 url: assignment_exam_templates_path(@assignment),
                 html: { multipart: true, size: 1 } do |f| %>
      <div>
        <p>
          <%= f.text_field :filename,
                           placeholder: 'Enter file name...' %>
        </p>
      </div>
      <section class='dialog-actions'>
        <%= f.submit 'Save Changes',
                     name: 'submit',
                     data: { disable_with: t('working') },
                     class: 'button' %>
        <input type='reset' value='<%= t(:cancel) %>' onclick='modal_create_new.close();'/>
      </section>
    <% end %>
<% end %>
