<%= content_for :modal_id, 'upload_dialog_config' %>
<%= content_for :modal_title, t('upload_assignment_zip') %>
<%= content_for :modal_open_link, '#uploadModalConfig' %>

<%= content_for :modal_content do %>

  <!-- Script for disabling upload buttons. -->
  <%= javascript_include_tag 'upload_button_control.js',
                             id: 'upload_script_for_config',
                             upload_id: 'upload_config_files',
                             button_id: 'submit_upload_for_config',
                             nonce: true %>

  <%= form_tag upload_config_files_assignment_path(:id), { multipart: true, size: 1 } do %>

    <!-- To be replaced when feature is finished and properly documented (and a helper page can be made) -->
    <p>
      Upload the zip file that was obtained from an assignment to copy it over
    </p>

    <%= file_field_tag :upload_file, required: true, :accept => '.zip' %>

    <section class='dialog-actions'>
      <%= submit_tag t(:upload),
                     data: { disable_with: t(:uploading_please_wait) },
                     disabled: true,
                     id: 'submit_upload' %>
      <input type='reset' value='<%= t(:cancel) %>'/>
    </section>
  <% end %>
<% end %>
