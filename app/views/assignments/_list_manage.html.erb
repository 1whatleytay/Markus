<div class="section">
  <% if @assignments.empty? %>
    <p>There are currently no assignments.</p>
  <% else %>
  
    <h3>Current assignments:</h3>
    <ul>
    
	<% @assignments.each do |assignment| %>
      <li>
        <%= link_to h(assignment.short_identifier)+": "+h(assignment.description), 
            {:controller => controller, 
            :action => action, 
            :id => assignment},
	    :class => "assignment_list"%>
        <span class="info_due_date"> due: <span class="info_date">  <%= h(assignment.due_date.strftime(LONG_DATE_TIME_FORMAT)) %></span></span>
      </li>
    <% end %>
    
    </ul>
  <% end %>
</div>
