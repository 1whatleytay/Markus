  <h2 class="legend">Assignment Rules</h2>
<div class="bloc_content">
    <span class="label">Name :</span>
    <%= h(@assignment.name) %><br />

    <span class="label">Description :</span>
    <%= h(@assignment.description) %><br />
    
    <span class="label">Message :</span>
    <%= h(@assignment.message) %><br />
    
    <span class="label">Due date :</span>
    <%= h(@assignment.due_date.strftime('%d %B')) %> at <%=
h(@assignment.due_date.strftime('%l%p%M')) %>

  <h4>Files required for this assignment</h4>
  <ul>
  <% if @assignment.assignment_files.count == 0%>
   <p> There are no required files for this assignment.</p>
  <% end %>
  <% @assignment.assignment_files.each do |assignment_file| %>
    <li><%= h(assignment_file.filename) %></li>
  <% end %>
  </ul>
</div>


