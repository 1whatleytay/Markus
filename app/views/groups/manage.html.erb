<div class="notice">
  <%=t('groups.editing_past_due_date_warning')%>
</div>
<% end %>

<div id="title_bar">
  <h1>Manage Groups
  <%= button_to_function "Use another assignment's groups", 'assignment_group_use(); return
    false;' %> 
    
    <% if @assignment.group_name_autogenerated %>
      <%= button_to_remote "Add New", :url => {:action => 'add_group', :id => @assignment.id}, :before => "groupings_table.clear_filters().render();"  %>  
    <% else %>
      <%= button_to_function "Add New", "make_new_group();", :before => "groupings_table.clear_filters().render();"  %>  
