<div class='test-result'>
  <% test_script_output = JSON.parse(test_script_result.actual_output) %>
  <% test_script_name = test_script_output['testrun']['test_script']
  ['script_name'] %>

  <h3><%= "#{t('automated_tests.test_run')} - #{test_script_name}" %>
    <span class='right'>
      <%= l(test_script_result.created_at, format: :long)%>
    </span>
  </h3>

  <% tests = test_script_output['testrun']['test_script']['test'] %>
  <div class='table'>
    <table>
      <thead>
        <tr>
          <th>Test Name</th>
          <th>Input</th>
          <th>Output</th>
          <th>Expected</th>
          <th>Marks Earned</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% tests.each do |test| %>
          <tr class="<%= test['status'] == 'pass' ?
          'test-result-success' : 'test-result-failure' %>">
            <td><%= test['name'] %></td>
            <td><%= test['input'] %></td>
            <td><%= test['actual'] %></td>
            <td><%= test['expected'] %></td>
            <td><%= test['marks_earned'] %></td>
            <td><%= raw test['status'] == 'pass' ?
            '&#10004;' : '&#10008;' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
