<div class='sortable_criteria'>
  <header>
    <span class='left'><%= t('criteria') %></span>
    <span class='center'>
      <%= t('weight') %>
      (<span id='rubric_total_weight'><%= @assignment.total_criteria_weight %></span>)
    </span>
    <span class='right'><%= t('visibility') %></span>
  </header>
  <ul id='rubric_criteria_pane_list'>
    <% @criteria.each do |criterion| -%>
      <%= render partial: 'rubrics/rubric_criterion',
                 locals: { criterion: criterion } %>
    <% end %>
  </ul>
</div>
