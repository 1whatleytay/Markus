<% content_for :head do %>
  <%= javascript_include_tag 'Chart', 'chart_config' %>
<% end %>

<% unless @grade_entry_form.nil? %>

  <canvas id='grade_entry_form<%= @grade_entry_form.id %>' width='400' height='350'></canvas>

  <script>
    // Set up graph
    var ctx = document.getElementById('grade_entry_form<%= @grade_entry_form.id %>').getContext('2d');

    // Set up data
    var data = {
      labels: Array.apply(null, Array(21)).map(function (_, i) { return i * 5; }),
      datasets: [{
        data: <%= @grade_entry_form.grade_distribution_array(20) %>
      }]
    };

    var options = {
      tooltips: {
        callbacks: {
          title: function (tooltipItems) {
            var baseNum = parseInt(tooltipItems[0].xLabel);
            if (baseNum === 0) {
              return '0-5';
            } else {
              return (baseNum + 1) + '-' + (baseNum + 5);
            }
          }
        }
      }
    };

    // Draw it
    new Chart(ctx, {
      type: 'bar',
      data: data,
      options: options
    });
  </script>
<% end %>
