<% if !grouping.has_submission? %>
  <% if assignment.submission_rule.can_collect_now? %>
    <%= link_to image_tag('icons/add.png'), :action => 'collect_and_begin_grading', :id => assignment.id, :grouping_id => grouping.id %>
  <% else %>
    -
  <% end %>
<% else %>
  <% if !grouping.get_submission_used.has_result? %>
    <%= image_tag('icons/pencil.png') %>
  <% else %>
     <% if grouping.get_submission_used.result.marking_state == 'complete'%>
    <%= link_to image_tag('icons/accept/png'), :controller => 'results', :action => 'edit', :id => grouping.get_submission_used.result.id %>

     <% else %>
    <%= link_to image_tag('icons/pencil.png'), :controller => 'results', :action => 'edit', :id => grouping.get_submission_used.result.id %>
     <% end %>
  <% end %>
<% end %>
